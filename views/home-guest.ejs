<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Malticulture Links</title>
    <link rel="stylesheet" href="/malti_styles_new.css">
</head>

<body>
    <header class="header-bar">
        <img class="picto-banner" src="/images/banner_malti_only_picto.png" alt="A nice malticulture banner">
    </header>
    <!-- header ends here -->

    <div class="main-container">
        <div class="beer-container">
            <h3>Bières recensées</h3>
            <table class="beer-table">
                <tr>
                    <th>Nom de la bière</th>
                    <th>Code-barres</th>
                </tr>
                <% data.forEach(function(beer) { %>
                <tr>
                    <td><%= beer.BEER_NAME %></td>
                    <td><a href="/<%= beer.BARCODE_NUMBER %>"><%= beer.BARCODE_NUMBER %></a></td>
                </tr>
                <% }) %>
            </table>
        </div>
    </div>

    <!-- footer begins -->
    <footer>
        <img class="picto-banner" src="/images/banner_malti_only_picto.png" alt="A nice malticulture banner">
        <div class="copyright">
            <p class="footer-p">Copyright &copy; 2021 <a href="https://www.malticulture.ch"
                    class="text-muted">Malticulture</a>. All rights reserved.</p>
        </div>
    </footer>

</body>

</html>